<!DOCTYPE html>
<html>
	<head>
		<title>Login ::</title>
		<style>
			#r {
			  background-color:   #d4e6f1 ;
			}
		</style>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script> 
	</head>
	<body id = 'r'>
		<div class="container" >
			<h1 align = "center">Login Here !!</h1>
			<form method="post" action="/loginsec" id = "myfrm">			
				<div class="form-group">
					<label>Email : </label>
					<input type="email" class="form-control" name="email" id = "email">
					<div id = "emailID" style="display: none; color: red;"> *Please Enter Email Id* .</div>
				</div>
				<div class="form-group">
					<label for="pwd">Password : </label>
					<input type="password" class="form-control" name="password" id="password">
					<div id = "passwordID" style="display: none; color: red;"> *Please Enter Password* .</div>
				</div>	
				<div class="form-group">
					<label>Choose User Type : </label>
					<select name = "type" id = "type" class="form-control">
						<option value="">---Select---</option>
						<option value="admin">ADMIN LOGIN</option>
						<option value="user">USER LOGIN</option>
					</select>
					<div id = "typeID" style="display: none; color: red;"> *Please Choose a Option* .</div>
				</div>
				 <button type="submit" class="btn btn-default">Login Here</button>
				 <a href="ForgetPassword" > Forget Password </a>						
			</form>
		</div>
	</body>
</html>

<script type="text/javascript">
	$(document).ready(function() { 
	 	$('#myfrm').on('submit', function(e){	 		
	       // e.preventDefault();
	        var flag = 0;
	        var email = $('#email').val();
	        if(email == '')
	        {
	        	$('#emailID').show('slow');
	        	flag++;
	        }
	        var password = $('#password').val(); //alert(password);
	        if(password == '')
	        {
	        	$('#passwordID').show('slow');
	        	flag++;
	        }

	        var type = $('#type').val();
	        if(type == '')
	        {
	        	$('#typeID').show('slow');
	        	flag++;
	        }
	       // alert(flag);

	        if(flag > 0)
	        {
	        	return false;
	        }
	        else
	        {
	        	return true;
	        }
	    });
	});
</script>